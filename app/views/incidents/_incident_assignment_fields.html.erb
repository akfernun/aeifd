    <div class="#"></div>
    <div class="nested-fields">
      <div class="panel panel-default">
        <div class="panel-heading">
        <div class="row">
          <div class="col-sm-9">
          <h3 class="panel-title" style="color:#444">Apparatus</h3>
        </div>
          <div class="col-sm-3">
             <% if !@incident.id.blank?  %>
              <% if !@rit2[0].nil? %>
              <% if f.object.asset_role_id != 5 %>
              <%= link_to "Deploy RIT", deployRIT_path, :class =>'btn btn-primary btn-xs', :style => "color:white" %>
              <% end %>
            <% end %>
            <% end %>
          </div>
        </div>


        </div>
        <div class="panel-body">
          <div class="field form-group">
            <%= f.label :asset, "Apparatus", class: 'col-sm-2 control-label' %>
            <div class="col-sm-10">

            <%= f.select :asset_id, options_for_select(Asset.all.map{ |c| [c.name, c.id, {'data-battalion'=>c.battalion_id}] }, :selected => f.object.asset_id),{}, class: "form-control ApparatusSelect" %>

            </div>
          </div>
          <div class="field form-group">
            <%= f.label :location, "Location", class: 'col-sm-2 control-label'%>
            <div class="col-sm-10">
              <%= f.select :location_id, options_from_collection_for_select(Location.all, :id, :name, :selected => f.object.location_id ), {}, class: "form-control" %>
            </div>
          </div>
          <div class="field form-group">
    		    <%= f.label :floor, "Floor", class: 'col-sm-2 control-label'%>
    		  	<div class="col-sm-10">
    		    	<%= f.select :floor, options_for_select([['Basement', 'Basement'], ['First Floor', 'First Floor']]), {},class: "form-control" %>
    		    </div>
		      </div>
          <div class="field form-group">
            <%= f.label :asset_role, "Role", class: 'col-sm-2 control-label'%>
            <div class="col-sm-10">
              <%= f.select :asset_role_id, options_from_collection_for_select(AssetRole.all, :id, :name, :selected => f.object.asset_role_id), {}, class: "form-control" %>
            </div>
          </div>

           <%= link_to_remove_association('Remove Apparatus', f,:class => 'btn btn-default form-control') %>
        </div>
  </div>
</div>
