      </div>


      <script>




        $(document).ready(function(){

          $(".checkoffButton").click(function(e){
            e.preventDefault();
            e.stopImmediatePropagation();
            var checkoff_id = $(this).attr("data-checkoff");
            var that = this;
      // console.log(that);
      $.ajax({
        type: "GET",
        dataType: "json",
        url: "/checkoff_maydays/"+checkoff_id+"/domaydaycheckoff",
        success: function(data){
         console.log(data);
         if(data.success == true){

          $(that).removeClass("btn-primary");
          $(that).addClass("btn-success");
          $(that).text("Complete!");
          $(that).attr("disabled",true);

        }else {
          alert("failed to save");
        }
      }
    })
    });

          $(".switchable").hide();
          $("#incidents_assignments").show();
          $("#assignments_btn").addClass("active");

          $(".big-button").click(function(){
            $(".big-button").removeClass("active");
            $(this).addClass("active");
            $("#update_incident_btn").show();

          });

          $("#incident_benchmarks_btn").click(function(){
            $(".switchable").hide();
            $("#update_incident_btn").hide();
            $("#checkoff_incidents").show();

          });

          $("#active_assets_btn").click(function(){
            $(".switchable").hide();
            $("#update_incident_btn").hide();
            $("#active_assets").show();

          });


          $("#incident_info_btn").click(function(){
            $(".switchable").hide();
            $("#incident_info").show();

          });

          $("#assignments_btn").click(function(){

            $(".switchable").hide();
            $("#incidents_assignments").show();
          });

          $("#incidents_exposures_btn").click(function(){
            $(".switchable").hide();
            $("#incidents_exposures").show();
          });



        });



      </script>
      <% end %>
