<div class="row">
<div class="col-sm-6"><h1>Editing Task</h1></div>
<%
	formatted_time = @incident.created_at.strftime('%H:%M:%S');
	formatted_date = @incident.created_at.strftime('%Y-%m-%d');
 %>
 <% if @incident.end_time.blank?  %>
<div class="col-sm-6">
	<div class="example" style="height:75px; float:right;" data-date=<%= formatted_date %>&#32;<%= formatted_time %>></div>
</div>
<% else %>
<div style="margin-top: 30px;">Incident ended on <%= @incident.end_time.strftime('%Y-%m-%d at %I:%M%p') %></div>
<% end %>
</div>




<%= render 'form' %>

<%= link_to 'Back', edit_incident_path(@incident), :class => "btn btn-default" %>
